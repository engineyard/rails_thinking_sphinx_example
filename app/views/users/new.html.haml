%h1 New User

= form_for :user, url: users_path do |f|

  .form-group
    = f.label :name
    = f.text_field :name, class: 'form-control'

  .form-group
    = f.label :phone_number
    = f.text_field :phone_number, class: 'form-control'

  = f.submit "Save", class: 'btn btn-primary'

= link_to 'Back', users_path
